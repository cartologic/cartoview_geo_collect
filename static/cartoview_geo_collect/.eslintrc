{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [ "eslint:recommended", "plugin:react/recommended" ],
    "plugins": [ "react" ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "classes": true,
            "defaultParams": true
        }
    },
    "rules": {
        "consistent-return": 2,
        "indent": [ 1, 4 ],
        "no-else-return": 1,
        "space-unary-ops": 2,
        "space-before-function-paren": [ "error", "never" ],
        "semi": [ 2, "never" ],
        "sort-imports": [ "error", { "ignoreCase": false } ]
    }
}
